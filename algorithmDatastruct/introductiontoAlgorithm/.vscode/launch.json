{
    "name": "C/C++: g++.exe 生成和调试活动文件",
    "type": "cppvsdbg",
    "request": "launch",
    "program": "${fileDirname}\\build\\Debug\\outDebug",
    "args": ["-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/bin/main.exe"
              ],
    "stopAtEntry": false,
    "cwd": "${fileDirname}",
    "environment": [],
    "externalConsole": false,
    "preLaunchTask": "C/C++: g++.exe 生成活动文件",
    "MIMode": "gdb",
    "setupCommands": [
        {
            "description": "为 gdb 启用整齐打印",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
    ],
    "logging": {
        "moduleLoad": false,
        "trace": true
    },
    "replLangId": "cpp"
}